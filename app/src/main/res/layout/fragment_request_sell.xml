<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:fillViewport="true"> <!-- Important -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Sell Form"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/input_product_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Product Name"
            android:inputType="textCapWords"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/input_quantity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Quantity (e.g., 1 kg)"
            android:inputType="number"
            android:digits="0123456789"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/input_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Price per kg"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/input_delivery_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Delivery Date"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="20dp"
            android:inputType="none" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Option"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/pickup_option_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <RadioButton
                android:id="@+id/option_vendor_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor will pick up the product" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer will deliver the product" />
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pick_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use Map to Select Address"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/shade2_blue"
            app:cornerRadius="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/payment_method"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Request"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/shade1_green"
            app:cornerRadius="8dp"
            android:elevation="4dp"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>

</ScrollView>
