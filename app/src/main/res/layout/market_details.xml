<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Page Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market Info"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_text"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Market Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/shade1_green"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Vendor Name -->
                    <TextView
                        android:id="@+id/vendorname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="Vendor Name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/vendor_name_text"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:background="#33FFFFFF" />

                    <!-- Market Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Market:"
                            android:textSize="@dimen/title"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/marketname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Banate Public Market"
                            android:textColor="@color/white"
                            android:textSize="@dimen/content_name" />
                    </LinearLayout>

                    <!-- Barangay Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Barangay:"
                            android:textColor="@color/white"
                            android:textSize="@dimen/title"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/baranggay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="San Felipe"
                            android:textColor="@color/white"
                            android:textSize="@dimen/content_name" />
                    </LinearLayout>

                    <!-- Phone Number + Call Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone No."
                            android:textColor="@color/white"
                            android:textSize="@dimen/title"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="09123456789"
                            android:textColor="@color/white"
                            android:textSize="@dimen/content_name" />

                        <ImageView
                            android:id="@+id/callFunction"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="12dp"
                            android:padding="6dp"
                            android:background="@drawable/call_icon_bg"
                            android:src="@android:drawable/ic_menu_call"
                            android:contentDescription="Call"
                            app:tint="@color/call_icon" />
                    </LinearLayout>

                    <!-- Lat/Long -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/location_active" />

                        <TextView
                            android:id="@+id/location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.9332, 122.8417"
                            android:textSize="@dimen/content_name"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <!-- Vendor Products Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="6dp"
                        android:text="Products Sold by Vendor"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/vendor_products_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/chat_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chat with Vendor"
                            android:textStyle="bold"
                            android:textColor="@color/shade1_green"
                            android:backgroundTint="@color/white"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="10dp"/>

                        <Button
                            android:id="@+id/request_sell"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Request to Sell Product"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:textColor="@color/shade1_green"
                            android:backgroundTint="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Footer Layout -->

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/footer2"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/navigation_bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home Icon -->
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:src="@drawable/home" />

        <!-- Location Icon -->
        <ImageView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:src="@drawable/location_logo" />

        <!-- Settings Icon -->
        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:contentDescription="Cart"
            android:src="@drawable/profile2" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/navigation_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.94" />

</androidx.constraintlayout.widget.ConstraintLayout>
