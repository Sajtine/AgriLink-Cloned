<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->

    <style name="ThemeOverlay.CustomCalendar" parent="">
        <item name="android:dateTextAppearance">@style/CustomCalendarDateText</item>
        <item name="android:weekDayTextAppearance">@style/CustomWeekDayText</item>
        <item name="colorControlActivated">@color/purple_200</item>
        <item name="colorControlNormal">@color/my_unfocused_month_date_color</item>
    </style>

    <style name="CustomCalendarDateText">
        <item name="android:textColor">@color/my_focused_month_date_color</item> <!-- Change date color -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomWeekDayText">
        <item name="android:textColor">#03A9F4</item> <!-- Change weekday color -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomCalendarHeader">
        <item name="android:textColor">@color/month_year_color</item> <!-- Change date color -->"
    </style>

    <style name="RoundedCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomSearchView" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Focused hint color -->
        <item name="colorControlActivated">#1E88E5</item> <!-- Blue when focused -->
        <!-- Normal hint color -->
        <item name="colorControlNormal">#9E9E9E</item>   <!-- Gray when not focused -->
    </style>

    <style name="RequestSellDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>




</resources>